# LocalSEO Automation - Environment Variables
# Copy to .env and fill in your values

# Keywords Everywhere API
# Sign up: https://keywordseverywhere.com/api
KEYWORDS_EVERYWHERE_API_KEY=

# DataForSEO API
# Sign up: https://dataforseo.com
# Value: Base64 encoded "login:password"
DATAFORSEO_AUTH=

# Serper API (Google SERP data)
# Sign up: https://serper.dev
SERPER_API_KEY=

# Google Search Console
# OAuth access token (use a refresh token flow in production)
GSC_ACCESS_TOKEN=

# Your domain (for GSC)
SITE_DOMAIN=yourdomain.com

# Data output directory (relative to project root or absolute)
SEO_DATA_DIR=data/seo

# Outreach settings
OUTREACH_DAILY_LIMIT=25
OUTREACH_SENDER_NAME=
OUTREACH_SENDER_EMAIL=
OUTREACH_COMPANY_NAME=
OUTREACH_DRY_RUN=true
